
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:background="@drawable/back"
    android:gravity="fill"
    app:layout_anchorGravity="fill"
    android:orientation="vertical"
    tools:context=".bingoPage">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:includeFontPadding="true"
        android:text="Feelings"
        android:textColor="#0D47A1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="casual" />


    <GridLayout
        android:id="@+id/gridofpics"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top|center_vertical"
        android:columnCount="2"
        android:foregroundGravity="center_vertical">

        <ImageButton
            android:id="@+id/ib1"
            android:layout_width="194dp"
            android:layout_height="155dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:drawingCacheQuality="low"
            android:fadeScrollbars="false"
            android:focusable="auto"
            android:focusableInTouchMode="false"
            android:keepScreenOn="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/scared2" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="183dp"
            android:layout_height="155dp"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/angry" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="194dp"
            android:layout_height="142dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/happy2" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="183dp"
            android:layout_height="142dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sad" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="194dp"
            android:layout_height="148dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/anxious" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="183dp"
            android:layout_height="148dp"

            android:scaleType="centerCrop"
            app:srcCompat="@drawable/Overtired2" />
    </GridLayout>



</LinearLayout>